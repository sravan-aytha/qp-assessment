{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build/src",
    "baseUrl": ".", 
    "paths": {
      "database/*": ["src/database/*"],
      "repositories/*":["src/repositories/*"],
      "services/*":["src/services/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build","deployment"]
}
